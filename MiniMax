def minimax(number, is_max_turn):
    if number == 0:
        return -1 if is_max_turn else +1
    moves = []
    for take in (1, 2):
        if number - take >= 0:
            moves.append(number - take)
    if not moves:
        return -1 if is_max_turn else +1
    if is_max_turn:
        best_score = float("-inf")
        for new_number in moves:
            score = minimax(new_number, False)
            best_score = max(best_score, score)
        return best_score
    else:
        best_score = float("inf")
        for new_number in moves:
            score = minimax(new_number, True)
            best_score = min(best_score, score)
        return best_score
def best_move_for_max(start_number):
    """
    Find the best first move (1 or 2) for Max
    from a given starting number.
    """
    best_score = float("-inf")
    best_take = None
    for take in (1, 2):
        if start_number - take >= 0:
            score = minimax(start_number - take, False)
            if score > best_score:
                best_score = score
                best_take = take

    return best_take, best_score
N = 5
move, score = best_move_for_max(N)
print(f"Best first move for Max from {N} is to take {move}, expected result score = {score}")
